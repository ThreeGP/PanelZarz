<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:IndustrialPanel.ViewModels"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
        x:Class="IndustrialPanel.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Panel Przemysłowy"
        Width="1400" Height="900">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NAGŁÓWEK -->
        <Border Grid.Row="0" Background="#6A1B9A" BoxShadow="0 2 8 0 #33000000">
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="⚙️" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Panel Przemysłowy" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="System Zarządzania Taśmami" FontSize="11" Foreground="#E1BEE7"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Border Background="#8E24AA" CornerRadius="20" Padding="15,8" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding CurrentUserName}" Foreground="White" FontSize="13" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Button Command="{Binding LogoutCommand}" Padding="15,8" MinWidth="110" Height="36" Background="#D32F2F" BorderThickness="0" CornerRadius="6">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="🚪" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                            <TextBlock Text="Wyloguj" FontSize="14" FontWeight="SemiBold" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GŁÓWNA ZAWARTOŚĆ -->
        <ScrollViewer Grid.Row="1" Background="#F5F5F5" Padding="20">
            <StackPanel Spacing="20">
                
                <!-- STATUS URZĄDZEŃ -->
                <Border Background="#FFFFFF" CornerRadius="10" Padding="20" BoxShadow="0 2 8 0 #1A000000">
                    <StackPanel>
                        <TextBlock Text="🔧 Status Urządzeń" FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,15"/>
                        
                        <ItemsControl ItemsSource="{Binding CurrentDevices}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F9F5FB" CornerRadius="8" Padding="15" Margin="5" 
                                            Cursor="Hand" Tag="{Binding DeviceId}" PointerReleased="DeviceCard_PointerReleased">
                                        <StackPanel>
                                            <TextBlock Text="{Binding DeviceName}" FontSize="15" FontWeight="SemiBold" Foreground="#6A1B9A"/>
                                            <TextBlock Text="{Binding DeviceId}" FontSize="11" Foreground="#666666" Margin="0,2,0,10"/>
                                            
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Prędkość" FontSize="11" Foreground="#666666"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding SpeedMetersPerSecond}" FontSize="18" FontWeight="Bold" Foreground="#7B1FA2"/>
                                                        <TextBlock Text=" m/s" FontSize="11" Foreground="#666666" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="Przepustowość" FontSize="11" Foreground="#666666"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding TonsPerHour}" FontSize="18" FontWeight="Bold" Foreground="#9C27B0"/>
                                                        <TextBlock Text=" t/h" FontSize="11" Foreground="#666666" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <Border Background="{Binding Status, Converter={x:Static vm:StatusColorConverter.Instance}}" 
                                                    CornerRadius="4" Padding="8,4" Margin="0,10,0,0">
                                                <TextBlock Text="{Binding Status}" FontSize="12" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- WYKRESY -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#FFFFFF" CornerRadius="10" Padding="20" BoxShadow="0 2 8 0 #1A000000">
                        <StackPanel>
                            <TextBlock Text="📈 Prędkość Taśmy" FontSize="16" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,15"/>
                            <lvc:CartesianChart Series="{Binding SpeedSeries}"
                                               XAxes="{Binding XAxes}"
                                               YAxes="{Binding SpeedYAxes}"
                                               ZoomMode="X"
                                               LegendPosition="Top"
                                               Height="300"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="#FFFFFF" CornerRadius="10" Padding="20" BoxShadow="0 2 8 0 #1A000000">
                        <StackPanel>
                            <TextBlock Text="📊 Przepustowość" FontSize="16" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,15"/>
                            <lvc:CartesianChart Series="{Binding ThroughputSeries}"
                                               XAxes="{Binding XAxes}"
                                               YAxes="{Binding ThroughputYAxes}"
                                               ZoomMode="X"
                                               LegendPosition="Top"
                                               Height="300"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- PRZYCISKI POD WYKRESAMI -->
                <Border Background="#FFFFFF" CornerRadius="10" Padding="25" BoxShadow="0 2 8 0 #1A000000">
                    <StackPanel Spacing="15">
                        
                        <Border Background="#E1BEE7" CornerRadius="6" Padding="15" IsVisible="{Binding IsExportStatusVisible}">
                            <TextBlock Text="{Binding ExportStatusMessage}" Foreground="#6A1B9A" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0"
                                    Command="{Binding ToggleRealTimeCommand}"
                                    Background="#8E24AA"
                                    Padding="20,12"
                                    Height="50"
                                    Margin="0,0,10,0"
                                    CornerRadius="8"
                                    BorderThickness="0">
                                <TextBlock Text="{Binding IsRealTimeEnabled, Converter={x:Static vm:RealTimeButtonConverter.Instance}}" 
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#FFFFFF"
                                           HorizontalAlignment="Center"/>
                            </Button>
                            
                            <Button Grid.Column="1"
                                    Name="ExportButton"
                                    Background="#7B1FA2"
                                    Padding="20,12"
                                    Height="50"
                                    Margin="5,0"
                                    CornerRadius="8"
                                    BorderThickness="0"
                                    IsEnabled="{Binding !IsExporting}">
                                <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                                    <TextBlock Text="📥" FontSize="18" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                                    <TextBlock Text="Pobierz raport" FontSize="16" FontWeight="Bold" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Grid.Column="2"
                                    Command="{Binding CancelExportCommand}"
                                    Background="#D32F2F"
                                    Padding="20,12"
                                    Height="50"
                                    Margin="10,0,0,0"
                                    CornerRadius="8"
                                    BorderThickness="0"
                                    IsVisible="{Binding IsExporting}">
                                <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                                    <TextBlock Text="❌" FontSize="18" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                                    <TextBlock Text="Anuluj" FontSize="16" FontWeight="Bold" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
